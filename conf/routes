# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Tasks          
GET     /politicians                  controllers.Application.politicians()
POST    /politicians                  controllers.Application.newPolitician()
POST    /politicians/:id/delete       controllers.Application.deletePolitician(id: Long)

# Tasks          
GET     /states                       controllers.Application.states()
POST    /states                  	  controllers.Application.newState()
POST    /states/:id/delete      	  controllers.Application.deleteState(id: Long)

# Tasks          
GET     /districts                    controllers.Application.districts()
POST    /districts                    controllers.Application.newDistrict()
POST    /districts/:id/delete         controllers.Application.deleteDistrict(id: Long)

# Tasks          
GET     /politicalparties                    controllers.Application.politicalparties()
POST    /politicalparties                    controllers.Application.newPoliticalparty()
POST    /politicalparties/:id/delete         controllers.Application.deletePoliticalparty(id: Long)

# Tasks          
GET     /constituencies                    controllers.Application.constituencies()
POST    /constituencies                    controllers.Application.newConstituency()
POST    /constituencies/:id/delete         controllers.Application.deleteConstituency(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
